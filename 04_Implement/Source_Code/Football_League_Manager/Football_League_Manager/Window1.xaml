<Window x:Class="Football_League_Manager.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Football_League_Manager"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Canvas>
        <Image Source="img/cr7.jpg" Height="577" Canvas.Top="-43" Width="794" Canvas.Left="2" />

        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Đăng Nhập" Foreground="White" VerticalAlignment="Top" Height="34" Width="120" RenderTransformOrigin="0.6,-1.279" FontWeight="Bold" TextDecorations="{x:Null}" FontFamily="Segoe UI Semibold" FontSize="20" Grid.RowSpan="2" Canvas.Left="187" Canvas.Top="45"/>
        <TextBox x:Name="txtFullName" materialDesign:HintAssist.Hint="Tài khoản" Foreground="White"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
        HorizontalAlignment="Left" Width="285" Canvas.Left="132" Canvas.Top="104"/>
        <PasswordBox materialDesign:HintAssist.Hint="Mật khẩu"
        Foreground="White" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" x:Name="txtPassW" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="285"  Canvas.Left="132" Canvas.Top="162"/>
        <Button Style="{StaticResource MaterialDesignRaisedButton}"
             materialDesign:ButtonProgressAssist.Value="-1"
             materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
             materialDesign:ButtonProgressAssist.IsIndeterminate="True" Background="Black" Content="Đăng Nhập" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118"  Grid.RowSpan="2" Canvas.Left="189" Canvas.Top="238" RenderTransformOrigin="0.659,1.95" Click="Button_Click" Height="38"/>
        <Image  Source="Cup.png" x:Name="image2" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="42" Grid.RowSpan="2" Canvas.Left="217" Canvas.Top="14"/>

    </Canvas>
</Window>
